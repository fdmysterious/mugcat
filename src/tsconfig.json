{
    "compilerOptions": {
        "baseUrl" :" ./src",

        "paths" : {
            "assets": ["../assets/"],
            "components" : ["components"],
            "config" : ["config"],
            "lib" : ["lib"],
            "pages": ["pages"],
            "style": ["style"]
        },

        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "sourceMap": true,

        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "strict": true,
        "module":"es2015",
        "moduleResolution":"node"
    },

    "include": [
        "./src/**/*.ts"
    ]
}
